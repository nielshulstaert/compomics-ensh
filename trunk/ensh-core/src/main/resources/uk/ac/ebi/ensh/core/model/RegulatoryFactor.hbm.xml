<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.compomics.ensh.core.model.impl.RegulatoryFactorImpl" table="regulatory_factor" entity-name="RegulatoryFactor">

        <id name="id" type="integer" unsaved-value="null" column="regulatory_factor_id">
            <generator class="native"/>
        </id>

        <property name="name"/>
        <property name="type"/>

        <joined-subclass name="com.compomics.ensh.core.model.impl.RegulatoryFactorCodingImpl" table="regulatory_factor_coding" entity-name="RegulatoryFactorCoding">
            <key column="regulatory_factor_id"/>
            <many-to-one name="transcript" entity-name="Transcript" column="transcript_id"/>
            <many-to-one name="gene" entity-name="Gene" column="gene_id"/>
        </joined-subclass>

        </class>

</hibernate-mapping>